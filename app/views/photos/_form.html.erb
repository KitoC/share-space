
<%= semantic_form_for photo do |f| %>
  <%= f.inputs do %>
    <%= f.input :image, label: "Upload", input_html: { class: "button" } %>
    <%= f.input :caption, as: :text, input_html: { class: "text_box_m", placeholder: "Say something witty..." }  %>
    <%= f.input :photoable_id, as: :hidden, input_html: { value: photoable_object.id  } %>
    <%= f.input :photoable_type, as: :hidden, input_html: { value: photoable_object.class.name } %>
  <% end %>
  <%= f.actions do %>
     <%= f.action :submit, :label => "Upload your image.", button_html: { class: "button_fl" }%>
   <% end %>
<% end %>
