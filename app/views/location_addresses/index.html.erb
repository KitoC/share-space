<p id="notice"><%= notice %></p>

<h1>Location Addresses</h1>

<table>
  <thead>
    <tr>
      <th>City suburb</th>
      <th>State</th>
      <th>Country</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_addresses.each do |location_address| %>
      <tr>
        <td><%= location_address.city_suburb %></td>
        <td><%= location_address.state %></td>
        <td><%= location_address.country %></td>
        <td><%= location_address.postcode %></td>
        <td><%= link_to 'Show', location_address %></td>
        <td><%= link_to 'Edit', edit_location_address_path(location_address) %></td>
        <td><%= link_to 'Destroy', location_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location Address', new_location_address_path %>
