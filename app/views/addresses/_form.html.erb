


<%= semantic_form_for address do |f| %>
  <%= f.inputs do %>

    <%= f.input :street_num %>
    <%= f.input :unit_num %>
    <%= f.input :street_name %>
    <%= f.input :street_type %>
    <%= f.input :city_suburb %>
    <%= f.input :state %>
    <%= f.input :postcode %>
    <%= f.input :country %>
    <%= f.input :addressable_id, as: :hidden, input_html: { value: address.id  } %>
    <%= f.input :addressable_type, as: :hidden, input_html: { value: address.class.name } %>
  <% end %>
  <%= f.actions do %>
     <%= f.action :submit, :label => "Upload your image.", button_html: { class: "button_fl" }%>
   <% end %>
<% end %>
